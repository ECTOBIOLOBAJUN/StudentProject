def h1 (data, dist_file):
    with open(dist_file, 'a') as f:
        f.write(data)
    f.closed

def get_wrapped_element(element,wrapper):
    return '<{}>{}</{}>'.format(wrapper,element,wrapper)

html_code = get_wrapped_element('Nicola Tecla','h1')
file_name = "test.html"


h1(html_code, file_name)

def message (data, dist_file):
    with open(dist_file, 'a') as f:
        f.write(data)
    f.closed

def get_wrapped_element(element,wrapper):
    return '<{}></{}>'.format(element,wrapper)

html_code = get_wrapped_element('div id="message"','div')
file_name = "test.html"


message(html_code, file_name)

def button (data, dist_file):
    with open(dist_file, 'a') as f:
        f.write(data)
    f.closed

def get_wrapped_element(wrapper1,element,wrapper):
    return '<{}>{}</{}>'.format(wrapper1,element,wrapper)

html_code = get_wrapped_element('button id="login-button"','Like','button')
file_name = "test.html"


button(html_code, file_name)

def clend (data, dist_file):
    with open(dist_file, 'a') as f:
        f.write(data)
    f.closed

def get_wrapped_element(element):
    return '</{}>'.format(element)
html_code = get_wrapped_element('div')
file_name = "test.html"


clend(html_code, file_name)
