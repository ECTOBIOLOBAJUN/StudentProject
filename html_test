def doctype (data, dist_file):
    """writing of file with name 'dist_file' by new text from 'date'"""
    with open(dist_file, 'a') as f:
        f.write(data)
    f.closed

def get_wrapped_element(element):
    """Getting the wrapped 'element' by wrapped without attributes.
    Example
       element = 'text'
       wrapped = 'div'
       result = '<div>text</div>'"""

    #return f'<{wrapper}>{element}</{wrapper}>' # for Python 3.7
    return '<{}>'.format(element) # for Python 3.5

html_code = get_wrapped_element('!DOCTYPE html')
file_name = "test.html"


doctype(html_code, file_name)


def lang (data, dist_file):
    with open(dist_file, 'a') as f:
        f.write(data)
    f.closed

def get_wrapped_element(element):
    return '<{}>'.format(element)

html_code = get_wrapped_element('html lang="en"')
file_name = "test.html"


lang(html_code, file_name)

def head (data, dist_file):
    with open(dist_file, 'a') as f:
        f.write(data)
    f.closed

def get_wrapped_element(element):
    return '<{}>'.format(element)

html_code = get_wrapped_element('head')
file_name = "test.html"


head(html_code, file_name)


