def link (data, dist_file):
    with open(dist_file, 'a') as f:
        f.write(data)
    f.closed

def get_wrapped_element(element):
    return '<{}>'.format(element)

html_code = get_wrapped_element('link rel="stylesheet" href="style.css"')
file_name = "test.html"


link(html_code, file_name)


def rewrite_of_file_with(data, dist_file):
    with open(dist_file, 'a') as f:
        f.write(data)
    f.closed

def get_wrapped_element(element, wrapper):
    return '<{}>{}</{}>'.format(wrapper, element, wrapper)

html_code = get_wrapped_element('Hello!', 'title')
file_name = "test.html"


rewrite_of_file_with(html_code, file_name)


def head_end (data, dist_file):
    with open(dist_file, 'a') as f:
        f.write(data)
    f.closed

def get_wrapped_element(element):
    return '</{}>'.format(element)

html_code = get_wrapped_element('head')
file_name = "test.html"


head_end(html_code, file_name)

